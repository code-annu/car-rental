<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./output.css" />
    <title>Cars</title>
  </head>
  <body>
    <%- include ('../partials/header') %>
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-8 text-center">Car List</h1>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8"
      >
        <% cars.forEach(car => { %>
        <div
          class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300"
        >
          <img
            src="<%= car.image_url %>"
            alt="<%= car.brand_name %> <%= car.model_name %>"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2">
              <%= car.brand_name %>
              <span class="text-gray-500 font-normal"
                ><%= car.model_name %></span
              >
            </h2>
            <p class="text-lg font-bold text-green-600 mb-4">
              $<%= car.price %>
            </p>
            <div
              class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition-colors flex justify-center cursor-pointer"
            >
              <a href="/car/<%-car.car_id%>">View Details</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
